		if(previous.currency != current.currency ){
			var grx = new GlideRecord('fx_rate');
			grx.addQuery('sys_created_on','STARTSWITH',current.exchange_rate_date);
			grx.addQuery('currency',current.currency);
			grx.query();
			if(grx.next()){
				if(current.exchange_rate_date != grx.rate) current.exchange_rate_date = grx.rate;
			}		

		}

	}else {
		if(!current.billing_profile) current.currency = '';
		current.exchange_rate_date = 0;
	}



})(current, previous);]]></script>
