        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	var newVat = current.vat_value;
	var newVatTotal = 0;

	var gr = new GlideRecord('x_tsigh_cmb_client_invoice_lines');
	gr.addQuery('client_invoice',current.sys_id);
	gr.query();
	while(gr.next()){
		var totalVat = Math.round(gr.price*newVat*100)/100;
		var totalRONVat = totalVat * current.exchange_rate_value;
		newVatTotal+=totalVat;
		gr.setValue('vat_value',totalVat);
		gr.setValue('vat_value_in_ron',totalRONVat);
		gr.update();
	}
	
	current.total_value_of_vat = newVatTotal;
	current.total = current.total_net_value+newVatTotal;


})(current, previous);]]></script>
